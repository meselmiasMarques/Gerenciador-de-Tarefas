@model MyTask.Models.Projeto

<div class="text-center">
    <h1 class="display-4">Cadastrar Projetos</h1>
</div>


<div>
    <form asp-action="Cadastrar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NomeProjeto" class="control-label">Nome</label>
            <input asp-for="NomeProjeto" class="form-control" />
            <span asp-validation-for="NomeProjeto" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea class="form-control" asp-for="DescricaoProjeto" rows="3"></textarea>
        </div>


        <br />

        <div class="form-group d-grid gap-2">
            <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
            <a asp-action="lista" class="btn btn-secondary btn-block">Voltar</a>

        </div>
    </form>
</div>


