@model IEnumerable<MyTask.Models.Usuario>

@{
    ViewData["Title"] = "lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-striped table-hove">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
   
            <td>
                    <a class="btn btn-warning asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a> |
                    <a class="btn btn-success" asp-action="Cadastrar">Novo Usuário</a>

            </td>
        </tr>
}
    </tbody>
</table>
